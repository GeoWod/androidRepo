<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/prfileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="42dp"
        android:background="@android:color/transparent"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emaileditText"
        android:layout_marginTop="30dp"
        android:hint="Enter email"
        android:textSize="@dimen/textview_size_15"
        android:drawableLeft="@drawable/login_user"
        android:drawablePadding="@dimen/dimen_size_10"
        android:paddingLeft="@dimen/dimen_size_10"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"
        android:singleLine="true"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_1"
        android:background="@color/whitecolor"

        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50"
        android:orientation="horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_50"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passEditText"
            android:hint="Password"
            android:textSize="@dimen/textview_size_15"
            android:drawableLeft="@drawable/login_lock"
            android:drawablePadding="@dimen/dimen_size_10"
            android:paddingLeft="@dimen/dimen_size_10"
            android:paddingRight="70dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_marginLeft="@dimen/dimen_size_20"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:singleLine="true"
            android:background="@null"/>

        <TextView
            android:id="@+id/forgotText"
            android:layout_width="70dp"
            android:layout_height="@dimen/dimen_size_50"
            android:text="Forgot?"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/passEditText"
            android:textColor="@color/whitecolor"/>



    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LOG IN"
        android:id="@+id/button"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/toolbarcolor"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:layout_marginRight="@dimen/dimen_size_20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/signup_text"
        android:id="@+id/signupbutton"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textview_size_16"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do you login with social account?"
        android:id="@+id/textView10"
        android:layout_above="@+id/longView"
        android:textSize="@dimen/textview_size_15"
        android:layout_marginBottom="@dimen/dimen_size_5"/>


    <View
        android:id="@+id/longView"
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_above="@+id/bottomRel"/>

    <RelativeLayout
        android:id="@+id/bottomRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Facebook"
                android:id="@+id/fbText"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/textview_size_16"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>

            <View android:background="#ffffff"
                android:layout_width = "2dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:id="@+id/view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Google+"
                android:id="@+id/textView9"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textview_size_16"
                android:gravity="center"
                android:layout_weight="1"/>



        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>