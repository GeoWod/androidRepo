<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Challanges"
    android:background="#fcfcfc">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Todo"

        android:text="In Your Locality"
        android:textSize="25dp"
        android:textColor="#000000"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/listtodo"
        android:layout_below="@+id/Todo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Completed"
        android:text="Completed"
        android:textSize="25dp"
        android:textColor="#000000"

        android:editable="false"
        android:layout_below="@+id/listtodo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/listcompleted"
        android:layout_below="@+id/Completed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
